<div class="login-form">
    <div class="col-md-6-auto">
        <div class="card card-body">
            <form method="POST" action='/log'>
                <div class="form-group">
                    <label class="exampleInputEmail1">User ID</label>
                    <input type="username" class="user-id form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        placeholder="Enter User-ID">
                    <small id="emailHelp" class="form-text text-muted">If you forget your user-ID or password, you're
                        fired.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="password form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="form-group form-check">
                </div>
                <div class = "row">
                    <div class = "col-md-2"><button type="submit" class="btn btn-primary">Submit</button></div>
                    <a class="btn btn-dark" href = "/users/newuser">New User</a>
                </div>
            </form>
        </div>
    </div>
</div>