<div class="jumbotron">
    <div class="col-md-6-auto">
        <div class="card card-body">
            {{#each defect}}
            <form class="form-group" action="/updatedefect/{{id}}?" method="POST">
                <div>
                    <div class = "row" style = "padding-bottom: 20px;">                
                    <div class = "col"><p>TicketNumber: {{ticket_number}}</p></div>
