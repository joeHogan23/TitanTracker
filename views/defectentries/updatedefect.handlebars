                    <input type="text" name="assigned_to">{{assigned_to}}</div>
                    </div>
                </div>
                <label>Defect Title</label>
                <div style = "padding-bottom: 20px;"><input class="form-control" type="text" name="defect_title" value={{defect_title}} required>
