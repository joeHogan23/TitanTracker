<div class="defect-form">
    <div class="col-md-6-auto">
        <div class="card card-body">
            {{#each defect}}
            <form class="form-group" action="/defectspage" method="POST">
                <div>
                    <div class="row" style="padding-bottom: 20px;">
                        <div class="col">
                            <p>TicketNumber: {{ticket_number}}</p>
                        </div>
                        <div class="col"><label>Assigned To</label>
                            <p>{{assigned_to}}</p>
                        </div>
                    </div>
                </div>
                <label>Defect Title</label>
                <div style="padding-bottom: 20px;">
                    <p class="form-control" type="text" name="defect_title">{{defect_title}} </p>
                </div>
                <br>

                <label>Defect Description</label>
                <p class="form-control" name="defect_description" id="defect-description">
                    {{defect_description}}</p>
                <br>
                <div class="row">
                    <div class="col-md-3">
                        <div class="row-md-2">
                            <label>Priority</label>
                            <p name="severity" id="severity" >{{severity}}</p>
                        </div>

                        <div class="row-md-2">

                            <label>Status</label>
                            <p name="status" id="status">{{status}}</p>
                        </div>

                        <br>
                        <div class="row" style="margin:auto;">
                            <input type="submit" class="btn btn-primary" value="Submit"
                                style="margin-bottom: 10px; style=padding:10px; margin-right:20px;">
                            <input type="button" class="btn btn-danger" data-toggle="collapse" value="View Logs"
                                href="#collapse" role="button" aria-expanded="false" aria-controls="collapseExample"
                                style="padding:10px; margin-bottom: 10px;">
                            </a>
                        </div>
                    </div>
                    <div class="col">
                        <p>Steps to Recreate</p>
                        <textarea name="steps_to_recreate" style="width:100%; height: 100px;"></textarea>
                    </div>
                </div>
                {{#each logs}}
                                <p>{{log_number}}</p>

                {{/each}}
            </form>
            {{/each}}
        </div>
    </div>
</div>
</div>
</div>